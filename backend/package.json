  "scripts": {
    "build": "tsc",
    "start": "node build/server.js",
    "dev": "nodemon --exec tsx src/server.ts",
    "test": "cross-env NODE_ENV=test mocha --require tsx \"src/test/**/*.test.ts\" --timeout 10000 --exit",
    "test:users": "cross-env NODE_ENV=test mocha --require tsx src/test/users/users.test.ts --timeout 5000 --exit",
    "cleanup": "tsx src/scripts/cleanupTestData.ts",
    "verificar-licencias": "tsx src/scripts/verificarLicenciasVencidas.ts",
    "verificar-licencias:prod": "pm2 start src/scripts/verificarLicenciasVencidas.ts --name=\"verificar-licencias\" --interpreter=\"tsx\"",
    "verificar-licencias:stop": "pm2 stop verificar-licencias",
    "verificar-licencias:status": "pm2 status verificar-licencias"
  },
